// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  amount      Float
  description String
  category    String
  source      String
  date        DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([date])
}

